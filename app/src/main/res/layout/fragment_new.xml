<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6A918888"
    tools:context=".NewFragment">

    <LinearLayout
        android:layout_width="333dp"
        android:layout_height="776dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textdisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Details to Create Account"
            android:textColor="#000"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/firstnametextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Enter First Name"
            android:textColor="#000"
            android:textSize="20dp"></TextView>

        <EditText
            android:id="@+id/firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Enter first name here"></EditText>

        <TextView

            android:id="@+id/lastnametextview"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_marginTop="30dp"

            android:text="Enter Last Name"

            android:textColor="#000"

            android:textSize="20dp">

        </TextView>

        <EditText

            android:id="@+id/lastname"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_marginTop="15dp"

            android:hint="Enter last name here">

        </EditText>

        <TextView

            android:id="@+id/emailtextview"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_marginTop="30dp"
            android:text="Enter Last Name"
            android:textColor="#000"
            android:textSize="20dp"></TextView>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Enter email here"
            android:inputType="textEmailAddress"></EditText>

        <TextView

            android:id="@+id/usernametextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Enter Username"
            android:textColor="#000"
            android:textSize="20dp"></TextView>

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Enter username here"></EditText>

        <TextView
            android:id="@+id/passwordtextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Enter Password"
            android:textColor="#000"
            android:textSize="20dp"></TextView>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Enter password here"
            android:inputType="textPassword"></EditText>

        <Button
            android:id="@+id/registerbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Create Account"></Button>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>